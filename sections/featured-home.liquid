<section class="cta" id="specialties">
  <div class="parallax-layer parallax-layer-base">
    <div class="cta-content ">
      <div class="container text-center">
        <h2>Our Menus</h2>
      </div>
    </div>
    <div class="overlay"></div>
  </div>
</section>
<section id="ourmenu" class="ourmenu bg-primary">
  <div class="container">
    <div class="col-md-10 col-md-offset-1 board">
      <!-- <h3 class="text-center">-Our Menu-</h3> -->
      <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.<br> Lorem ipsum has been the ipsum has been the ipsum has been the</p>
      <div class="owl-carousel owl-theme">
        {% if collections['main-menu'].products.size > 0 %}

        {% for product in collections['main-menu'].products %}
        <div class="item">
          <img src="{{ product.featured_image | product_img_url: 'medium' }}" alt="{{ product.title | escape  }}" class="img-responsive center-block"/>
          <a class="shop-now" href="{{ product.url }}"><h4>{{ product.title | escape  }}</h4></a>
          <span class="price">P150.00</span>
          <hr>
        </div>
        {% endfor %}

        {% endif %}
      </div>

      <a id="find-button" href="#about" class="btn btn-outline btn-xl page-scroll sr-button">View Full Menu</a>

    </div>

  </div>
</section>
